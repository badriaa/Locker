<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="@string/my_lockerpage"
        android:textColor="#FF009688"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/btnBookLockerMyLocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="70dp"
        android:background="#FFFAFAFA"
        android:src="@drawable/book" />

    <ImageButton
        android:id="@+id/btnRenewalLockerMyLocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_book"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="60dp"
        android:background="#FFFAFAFA"
        android:src="@drawable/renewal" />

    <ImageButton
        android:id="@+id/btnLockerMyLocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="60dp"
        android:background="#fafafa"
        android:src="@drawable/lo" />

</FrameLayout>
